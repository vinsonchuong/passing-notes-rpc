{
  "name": "passing-notes-rpc",
  "version": "0.0.0",
  "description": "Simple communication between browser and server",
  "keywords": [],
  "homepage": "https://github.com/vinsonchuong/passing-notes-rpc",
  "bugs": "https://github.com/vinsonchuong/passing-notes-rpc/issues",
  "license": "MIT",
  "author": "Vinson Chuong <vinsonchuong@gmail.com>",
  "repository": "vinsonchuong/passing-notes-rpc",
  "main": "index.js",
  "scripts": {
    "test": "xo && ava",
    "release": "semantic-release"
  },
  "type": "module",
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "lodash": "^4.17.21",
    "passing-notes-sse": "^1.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "ava": "^5.3.1",
    "ava-patterns": "^3.2.1",
    "passing-notes": "^6.8.2",
    "passing-notes-ui": "^1.3.5",
    "puppet-strings": "^5.0.1",
    "puppet-strings-chrome": "^2.0.3",
    "quick-install": "^2.0.3",
    "semantic-release": "^22.0.7",
    "xo": "^0.56.0"
  },
  "ava": {
    "verbose": true,
    "timeout": "60s"
  },
  "xo": {
    "prettier": true,
    "space": 2,
    "semicolon": false,
    "envs": [
      "browser",
      "node"
    ],
    "rules": {
      "import/no-anonymous-default-export": "off",
      "no-await-in-loop": "off"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
